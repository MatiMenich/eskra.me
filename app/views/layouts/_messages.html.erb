<% unless @msg_success.nil? %>
<div class="alert alert-success alert-dismissable col-xs-12 col-sm-12 col-md-6 col-md-offset-3">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <strong>Great!</strong> <%= @msg_success %>
</div>
<% end %>

<% unless @msg_error.nil? %>
<div class="alert alert-danger alert-dismissable col-xs-12 col-sm-12 col-md-6 col-md-offset-3">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <strong>Oh no!</strong> <%= @msg_error %>
</div>
<% end %>

<% unless @msg_warning.nil? %>
<div class="alert alert-warning alert-dismissable col-xs-12 col-sm-12 col-md-6 col-md-offset-3">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <strong>Watch out!</strong> <%= @msg_warning %>
</div>
<% end %>