<div class='container-fluid'>

	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-6">
			<h4 class="board-title"><a href="#" data-xeditable="true" data-pk="<%= @board.id %>" data-model="board" data-name="name" data-url="<%= board_url(@board) %>" data-title="Enter name">
            <%= @board.name %>
          </a></h4>
		</div>
		<div class="col-xs-12 col-sm-12 col-md-6">
			<div class='btn-toolbar'>
				<div class="btn-group pull-right">
					<button class="btn btn-primary" id="add_column" board-id="<%= @board.id %>">
						<span class='glyphicon glyphicon-list-alt'></span> 
						Add Column
					</button>
					<button class="btn btn-success" id="add_story" board-id="<%= @board.id %>">
						<span class='glyphicon glyphicon-th-list'></span> 
						Add Story
					</button>
				</div>
				<div class="btn-group pull-right" data-toggle="buttons">
					<button class="btn btn-default active" id="toggle_collapse">
						<span class='glyphicon glyphicon-eye-open'></span> 
						Toggle View
					</button>
					<button class="btn btn-default active" id="toggle_edit">
					<span class='glyphicon glyphicon-edit'></span> 
						Toggle Edit
					</button>
				</div>
			</div>

		</div>
	</div>
	<br>
	<div class="row">
		<div class="table-responsive">
			<table class="table table-bordered">
				<thead class="title_field">
					<tr>
						<th><h4>Stories</h4></th>
						<% @board.columns.each do |column| %>
							<th>
								<div class="column-title h4" board-id='<%= column.id %>'>
										<a href="#" data-xeditable="true" data-pk="<%= column.id %>" data-model="column" data-name="name" data-url="<%= column_url(column) %>" data-title="Enter name">
							            	<%= column.name %>
							          	</a>
									<button class="btn btn-xs btn-danger delete-column pull-right">
										<span class='glyphicon glyphicon-remove'></span>
									</button>
								</div>
							</th>
						<% end %>
					</tr>
				</thead>
				<tbody class="column_field">
					<% @board.rows.each do |story| %>
						<tr story-id="<%= story.id %>">
							<td class="story-column">
							<a href="#" data-xeditable="true" data-pk="<%= story.id %>" data-model="row" data-name="name" data-url="<%= row_url(story) %>" data-title="Enter name">
						        <%= story.name %>
						    </a>
						    <br/>
								<div class="btn-group">
									<button class="btn btn-xs btn-warning delete-story"><span class="glyphicon glyphicon-trash"> </span></button>
									<button class="btn btn-xs btn-primary" add-sticky="true"><span class="glyphicon glyphicon-plus"> </span></button>  
								</div>
							</td>
							<% @board.columns.each do |column|%>
								<td class="column" column-id="<%= column.id %>">
									<% column.stickies.each do |sticky| %>
										<% if story.stickies.include?(sticky) %>
										<div class="panel <%= sticky.color %>" sticky-id="<%= sticky.id %>">
											<div class="panel-heading"><a href="#" data-xeditable="true" data-pk="<%= sticky.id %>" data-model="sticky" data-name="name" data-url="<%= sticky_url(sticky) %>" data-title="Enter name">
									        <%= sticky.name %>
									    	</a><i class="panel-button"></i></div>
											<div class="panel-body"><a href="#" data-xeditable="true" data-pk="<%= sticky.id %>" data-model="sticky" data-type="textarea" data-showbuttons="bottom" data-anim="500" data-name="text" data-url="<%= sticky_url(sticky) %>" data-title="Enter text"><%= sticky.text %></a></div>
										</div>
										<% end %>
									<% end %>
								</td>
							<% end %>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>